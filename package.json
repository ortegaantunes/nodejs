{
  "name": "express-app-testing-demo",
  "description": "Demo NodeJS Project",
  "version": "1.1.2",
  "engines": {
    "node": ">=12"
  },
  "private": true,
  "main": "app/server.js",
  "scripts": {
    "start": "nodemon app/server.js",
    "test": "npm run lint",
    "test:e2e": "jest --runInBand e2e_tests/*.test.js",
    "jest": "jest --coverage app/__tests__/*.test.js",
    "lint": "eslint -f json app/*.js e2e_tests/*.js -o ./coverage/eslint-report.json --fix",
    "prettier": "prettier --write app/*.js app/__{tests,mocks}__/*.js e2e_tests/*.js"
  },
  "dependencies": {
    "ejs": "~3.1.3",
    "express": "~4.17.1",
    "got": "^11.1.4",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "eslint": "^7.0.0",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "supertest": "~4.0.2",
    "jest-sonar-reporter": "^2.0.0",
    "eslint-plugin-sonarjs": "^0.8.0-125"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gregjopa/express-app-testing-demo"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "verbose": true,
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "jestSonar": {
    "reportPath": "./coverage/",
    "reportFile": "test-reporter.xml",
    "indent": 4
  },
  "prettier": {
    "singleQuote": true
  }
}
