{
  "name": "express-app-testing-demo",
  "description": "Demo NodeJS Project",
  "version": "1.0.1",
  "engines": {
    "node": ">=12"
  },
  "private": true,
  "main": "app/server.js",
  "scripts": {
    "start": "nodemon app/server.js",
    "test": "npm run lint && npm run jest",
    "test:e2e": "jest --runInBand e2e_tests/*.test.js",
    "jest": "jest --coverage app/__tests__/*.test.js",
    "lint": "eslint app/*.js e2e_tests/*.js",
    "prettier": "prettier --write app/*.js app/__{tests,mocks}__/*.js e2e_tests/*.js"
  },
  "dependencies": {
    "ejs": "~3.1.3",
    "express": "~4.17.1",
    "got": "^11.1.4",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "eslint": "^7.0.0",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "supertest": "~4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gregjopa/express-app-testing-demo"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testResultsProcessor":  "jest-sonar-reporter",
    "collectCoverage": "true",
    "verbose": true
  },
  "jestSonar": {
    "reportPath":  "coverage",
    "reportFile":  "test-reporter.xml"
  },
  "prettier": {
    "singleQuote": true
  }
}
